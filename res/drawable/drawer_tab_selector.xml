    <item android:drawable="@drawable/tab_unselected_bg" android:state_enabled="false" android:state_focused="true" android:state_pressed="true"/>
    <item android:drawable="@drawable/tab_unselected_bg" android:state_enabled="false" android:state_focused="true"/>
    <item android:drawable="@drawable/tab_selected_bg" android:state_focused="true" android:state_pressed="true"/>
    <item android:drawable="@drawable/tab_selected_bg" android:state_focused="false" android:state_pressed="true"/>
    <item android:drawable="@drawable/tab_selected_bg" android:state_focused="true"/>
    <item android:drawable="@drawable/tab_selected_bg" android:state_focused="false" android:state_selected="true"/>
    <item android:drawable="@drawable/tab_selected_bg" android:state_selected="true"/>

</selector>